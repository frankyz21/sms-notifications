<!-- app/views/invitations/new.html.erb -->

<div class="invitation-form">
  <%= form_with url: invite_path, method: :post, class: "invitation-form__form" do |form| %>
    <div class="form-group">
      <%= form.label :phone_number, 'Phone Number', class: "form-label" %>
      <%= form.text_field :phone_number, placeholder: 'Enter verified phone number', class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :message, 'Message', class: "form-label" %>
      <%= form.text_area :message, placeholder: 'Enter your message', value: "Hi there, this message is an invitation to this platform", class: "form-textarea" %>
    </div>

    <%= form.submit 'Send Invitation', class: "btn btn-primary" %>
  <% end %>
</div>
